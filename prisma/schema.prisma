// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
}

model User {
  id               String    @id @default(uuid())
  email            String    @unique
  name             String
  password         String
  resetToken       String?   @unique
  resetTokenExpiry DateTime?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  
  whatsappAccounts WhatsAppAccount[]

  @@map("users")
}

model WhatsAppAccount {
  id          String   @id @default(uuid())
  name        String
  phoneNumber String
  description String?
  status      String   @default("disconnected") // connected, disconnected
  sessionId   String?  @unique
  webhookUrl  String?
  apiToken    String?
  apiEnabled  Boolean  @default(false)
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  apiLogs     ApiMessageLog[]

  @@map("whatsapp_accounts")
}

model ApiMessageLog {
  id                String          @id @default(uuid())
  to                String
  message           String?
  mediaUrl          String?
  mediaType         String?
  status            String          @default("sent") // sent, error
  errorMessage      String?
  accountId         String
  account           WhatsAppAccount @relation(fields: [accountId], references: [id], onDelete: Cascade)
  createdAt         DateTime        @default(now())

  @@map("api_message_logs")
}


