// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
}

model User {
  id               String    @id @default(uuid())
  email            String    @unique
  name             String
  password         String
  resetToken       String?   @unique
  resetTokenExpiry DateTime?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  
  whatsappAccounts WhatsAppAccount[]

  @@map("users")
}

model WhatsAppAccount {
  id          String   @id @default(uuid())
  name        String
  phoneNumber String
  description String?
  status      String   @default("disconnected") // connected, disconnected
  sessionId   String?  @unique
  webhookUrl  String?
  apiToken    String?
  apiEnabled  Boolean  @default(false)
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  apiLogs     ApiMessageLog[]
  chatMessages ChatMessage[]
  aiConfig    AiConfiguration?

  @@map("whatsapp_accounts")
}

model AiConfiguration {
  id               String          @id @default(uuid())
  enabled          Boolean         @default(false)
  provider         String          @default("chatgpt") // chatgpt, ollama
  
  // ChatGPT Settings
  apiKey           String?
  model            String?         @default("gpt-3.5-turbo")
  
  // Ollama Settings
  ollamaUrl        String?         @default("http://localhost:11434")
  ollamaModel      String?         @default("llama2")
  
  // Common Settings
  systemPrompt     String?         @default("Eres un asistente útil.")
  
  accountId        String          @unique
  account          WhatsAppAccount @relation(fields: [accountId], references: [id], onDelete: Cascade)
  
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt

  @@map("ai_configurations")
}

model ApiMessageLog {
  id                String          @id @default(uuid())
  to                String
  message           String?
  mediaUrl          String?
  mediaType         String?
  status            String          @default("sent") // sent, error
  errorMessage      String?
  accountId         String
  account           WhatsAppAccount @relation(fields: [accountId], references: [id], onDelete: Cascade)
  createdAt         DateTime        @default(now())

  @@map("api_message_logs")
}

model ChatMessage {
  id          String          @id @default(uuid())
  role        String          // 'user' (cliente) o 'assistant' (IA)
  content     String
  from        String          // remoteJid o número del cliente
  accountId   String
  account     WhatsAppAccount @relation(fields: [accountId], references: [id], onDelete: Cascade)
  createdAt   DateTime        @default(now())

  @@index([from, accountId])
  @@map("chat_messages")
}


